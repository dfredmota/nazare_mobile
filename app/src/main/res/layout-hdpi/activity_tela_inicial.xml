<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_nazare"
            android:id="@+id/imageViewIcon"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/txt_pesquisa"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:text="Pesquisa de Preço"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_data"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <Spinner
            android:id="@+id/spinnerConcorrente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_data"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/verdeClaro"
            android:backgroundTintMode="@color/verdeClaro"
            android:padding="10dp" />


        <Button
            android:id="@+id/btnSelecionar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape_btn"
            android:text="Selecionar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSelecionar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape_btn"
            android:text="Finalizar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSincronizar"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFinalizar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape_btn"
            android:text="Sincronizar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSincronizar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape_btn"
            android:text="Mudar Usuário"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSair"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape_btn"
            android:text="Sair"
            android:textColor="@color/white" />

    </LinearLayout>

    </ScrollView>



</RelativeLayout>
