<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="7dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/txt_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Código: "
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/txt_codigo"/>

        <TextView
            android:id="@+id/txt_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Descrição: "
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_below="@+id/txt_codigo"/>

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/txt_descricao"
            android:layout_below="@+id/codigo"/>

        <TextView
            android:id="@+id/txt_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_descricao"
            android:text="Já Foi Lido:"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_flag"
            android:layout_alignBottom="@+id/txt_flag"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/txt_flag"
            android:layout_toRightOf="@+id/txt_flag"
            android:text="aaaa"
            android:textColor="@color/black"
            android:textSize="14dp" />



        <TextView
            android:id="@+id/txt_situacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_flag"
            android:text="Situação:"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/situacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:layout_toRightOf="@+id/txt_situacao"
            android:layout_below="@+id/flag"
            android:textColor="@color/black"
            android:textSize="14dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>