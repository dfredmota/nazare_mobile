<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/logo_nazare"
        android:id="@+id/imageViewIcon"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/imageViewIcon"
        android:layout_alignTop="@+id/imageViewIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp">


        <TextView
            android:id="@+id/txt_pesquisa"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:text="Pesquisa de Preço"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_data"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <Spinner
            android:id="@+id/spinnerConcorrente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_data"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/verdeClaro"
            android:backgroundTintMode="@color/verdeClaro"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Selecionar"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnSelecionar"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/linearlayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnFinalizar"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/btnSelecionar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Mudar Usuário"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnLogout"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/btnFinalizar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnSair"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/btnLogout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
