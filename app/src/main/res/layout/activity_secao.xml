<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/logo_nazare"
        android:id="@+id/imageViewIcon"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/imageViewIcon"
        android:layout_alignTop="@+id/imageViewIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp">


        <TextView
            android:id="@+id/txt_pesquisa"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Selecione a Seção"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerSecao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_data"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/verdeClaro"
            android:backgroundTintMode="@color/verdeClaro"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Selecionar Seção"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnSecao"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/linearlayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:id="@+id/btnVoltar"
        android:background="@drawable/round_shape_btn"
        android:layout_below="@+id/btnSecao"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
