<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="resoluteit.com.br">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.resoluteit.activity.MainActivity" />
        <activity
            android:name="br.com.resoluteit.activity.LoginAct"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="br.com.resoluteit.activity.CodBarraAct" />
        <activity
            android:name="br.com.resoluteit.activity.TelaInicial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="br.com.resoluteit.activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.resoluteit.activity.SecaoAct"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>