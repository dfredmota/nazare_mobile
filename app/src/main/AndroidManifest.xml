<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="resoluteit.com.br">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_nazare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.resoluteit.activity.MainActivity" />
        <activity
            android:name="br.com.resoluteit.activity.LoginAct"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden" />
        <activity android:name="br.com.resoluteit.activity.CodBarraAct" />
        <activity
            android:name="br.com.resoluteit.activity.TelaInicial"
            android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"  />
        <activity android:name="br.com.resoluteit.activity.SplashScreen" android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.com.resoluteit.activity.SecaoAct"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />

        <activity
            android:name="br.com.resoluteit.activity.ProdutoAct"
            android:label="@string/title_activity_produto" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />

        <activity android:name="br.com.resoluteit.activity.ListaProdutosAct"
            android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"></activity>
    </application>

</manifest>